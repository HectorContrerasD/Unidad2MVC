@model IEnumerable<Act1.Models.ViewModels.IndexViewModel>
@{
    Layout="Layout";
}
<div class="slides">
    <img src="~/images/carousel1.jpg" />
</div>

<h1>Clasificación de los vertebrados</h1>

<div class="clases">
   
        @foreach (var item in Model)
        {
            <div >  
            <a href="~/especies/Index/@item.NombreClase">
                <img src="~/clases/@(item.Id).jpg" />
                <h1>@item.NombreClase</h1>
                <p>@item.DescripcionClase</p>
            </a> 
            </div>
        }

   

</div>

   
