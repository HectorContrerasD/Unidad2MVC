@model Act1.Models.ViewModels.DetallesViewModel
@{
    Layout="Layout";
}
<div class="especieficha1">
    <img src="~/especies/@(Model.Id).jpg" />
    <div>
        <h1>@Model.Nombre</h1>
        <p><label>Clase:</label><a href="~/Home/Especies/@Model.Clase">@Model.Clase</a></p>
        <p><label>Peso:</label>@($"{Model.Peso:0.00} kg")</p>
        <p><label>Tamaño:</label>@(Model.Tamano) cm</p>
        <p><label>Habitat:</label>@Model.Habitat</p>
        <p><label>Descripción:</label></p>
        <p>@Model.Descripcion</p>
    </div>

    <a href="~/Home/Especies">Regresar</a>
</div>

