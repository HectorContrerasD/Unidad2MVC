@model Act1.Models.ViewModels.EspeciesViewModel
@{
    Layout = "Layout";
}

    <h1>
    <img src="~/clases/@(Model.IdClase).png" /> @Model.NClase
    </h1>
    <div class="listaEspecies2">
        @foreach (var item in Model.ListaAnimales)
        {
            <a href="~/Home/detalles/@item.AnimalName">
                <img src="~/especies/@(item.AnimalId).jpg" title="@item.AnimalName" />
            </a>
        }
    </div>




<script>

    var c = document.querySelector("main h1 img").cloneNode();
    document.querySelector("main h1").appendChild(c);
</script>


